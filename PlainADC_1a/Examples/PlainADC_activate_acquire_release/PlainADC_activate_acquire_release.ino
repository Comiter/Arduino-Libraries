();	Serial.print("Uppercount : ");	Serial.print(OCR1A, DEC);	Serial.println();		Serial.print("ADC prescaler : ");	Serial.print(ADCSRA & 0x07, DEC);	Serial.println();	/* Mark event */	BlinkLed(3);}void loop(void) {	for (uint8_t i = 0; i < 2; i++) {		/* Mark event */		BlinkLed(1); 		/* Reset and set acquisition parameters */		pADC.ReleaseAcquisitionEngine();		pADC.SetAcquisitionEngine(adcChannel, refVoltage, samplingFrequency, vSamples[i], dataFormat, options);			/* Acquire data */		pADC.GetScanData();		/* Print data */		PrintData(vSamples[i]);					delay(3000); /* Repeat after delay */	}	// while(1); /* Run Once */}void PrintData(uint16_t samples) /* Print data from vector */{	for (uint16_t i = 0; i < samples; i++) {		float abscissa = (i / samplingFrequency);		Serial.print(abscissa, 6);		Serial.print("\t");			float ordinate = pADC.ReadUInt16Data(i);		ordinate *= (5.0 / 1024.0);		// ordinate -= 2.5; /* Subtract offset in order to simplify the FFT spectral analysis */		Serial.print(ordinate, 6);		Serial.println();	}}void BlinkLed(uint8_t cycles) /* Blink control led */{	/* Make the led pin an output pin */	DDRB |= (1 << PINB5);	/* Reset pin state */	PORTB &= ~(1 << PINB5); /* Turn control led off */	for (uint8_t i = 0; i < (cycles << 1); i++)	{		delay(200);		PORTB ^= (1 << PINB5);	}}